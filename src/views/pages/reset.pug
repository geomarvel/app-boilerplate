extends ../partials/base.pug
block container
	.column-24
		.column-8.center-column
			h3 Reset Password
			form(method='post')
				.form-group
					label.col-md-4 New Password
						input.form-control(type='password',name='password',value='', placeholder='New password', autofocus=true)
				.form-group
					label.col-md-4 Confirm Password
						input.form-control(type='password',name='confirm',value='', placeholder='Confirm password', autofocus=true)
				.form-group
					button.btn.btn-primary(type='submit') Update Password
